          "query": "import \"influxdata/influxdb/schema\"\n\nlatest_telemetry = from(bucket: \"telemetry\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r[\"_measurement\"] == \"node_telemetry\")\n  |> filter(fn: (r) => r[\"hub_id\"] == \"${hub_id}\")\n  |> pivot(rowKey:[\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> group(columns: [\"node_id\"])\n  |> last()\n\nlatest_status = from(bucket: \"telemetry\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r[\"_measurement\"] == \"node_status\")\n  |> filter(fn: (r) => r[\"hub_id\"] == \"${hub_id}\")\n  |> filter(fn: (r) => r[\"_field\"] == \"state\" or r[\"_field\"] == \"error_code\")\n  |> pivot(rowKey:[\"_time\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> group(columns: [\"node_id\"])\n  |> last()\n\njoin(\n  tables: {telemetry: latest_telemetry, status: latest_status},\n  on: [\"node_id\"]\n)\n|> keep(columns: [\"node_id\", \"state\", \"voltage\", \"current\", \"power_kw\", \"power_limit_kw\", \"is_occupied\", \"connected_vehicle_id\", \"current_vehicle_soc\", \"error_code\"])\n|> rename(columns: {node_id: \"Node ID\", state: \"State\", voltage: \"Voltage (V)\", current: \"Current (A)\", power_kw: \"Power (kW)\", power_limit_kw: \"Limit (kW)\", is_occupied: \"Occupied\", connected_vehicle_id: \"Vehicle ID\", current_vehicle_soc: \"SOC (%)\", error_code: \"Error\"})",
