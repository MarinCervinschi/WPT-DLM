[Unit]
Description=WPT-DLM Gateway Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/WPT-DLM/edge/gateway
ExecStart=/usr/bin/python3 /home/pi/WPT-DLM/edge/gateway/main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
